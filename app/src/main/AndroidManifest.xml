<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.caowj.kotlintest">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".common.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.FristActivity" />
        <activity android:name=".activity.SecondActivity" />
        <activity android:name=".activity.FunctionListActivity" />
        <activity android:name=".activity.fanfou.FanfouActivity" />
        <activity
            android:name=".activity.AboutActivity"
            android:label="@string/about"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.fanfou.FanfouDetailsActivity"
            android:label="@string/activity_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.weather.WeatherChooseActivity" />
        <activity
            android:name=".activity.weather.WeatherDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".service.AutoUpdateService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".activity.weather.TestActivity"
            android:label="@string/title_activity_test"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>